/**index.wxss**/
.container {
  background-color: #fff;
  min-height: 100%;
}

/* 搜索 */
.search {
  width: 100%;
  background-color: #ff6700;
  height: 100rpx;
  position: relative;
}
.search-content {
  width: 700rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 60rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}
.search-text {
  display: inline;
  color: #999999;
  font-size: 25rpx;
  line-height: 0%
}
.search-icon {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}
/* 轮播图 */

.swiper-container .swiper-slide{
  width: 750rpx;
  height: 380rpx;
}
.swiper-slide .swiper-image {
  width: 750rpx;
  display: block;
}