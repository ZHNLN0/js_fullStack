/**index.wxss**/
.searchWrapper {
  width: 100%;
  height: 90rpx;
  position: relative;
  background-color: #ff6700;
}
.search-content {
  width: 700rpx;
  height: 50rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  box-sizing: border-box;
  border-radius: 50rpx;
  background: #fff;
}
.searchImg {
  width: 40rpx;
  height: 40rpx;
}
.searchText {
  color: #999999;
  font-size: 25rpx;
  line-height: 50rpx;
}
/* 轮播图 */
.swiper-container .swiper-slide{
  width: 750rpx;
  height: 375rpx;
}
.swiper-slide .swiper-image {
  width: 750rpx;
  display: block;
}

/* 首页导航栏 */
.cells_auto_fills {
  width: 100%;
}
.cell {
  height: 160rpx;
  flex: 1;
}
.cell>image {
  width: 100%;
  height: 100%;
}

.divider_line {
  width: 100%;
  height: 0;
  border-bottom: 16rpx solid rgb(245,245,245);
}

/* 首页商品列表 */


.products, .products-header, .product-list{
  width: 100%;
}
.product-name, .product-desc,.product-price {
  box-sizing: border-box;
}

.products-header {
  height: 125rpx;
}
.product, .product-img {
  width: 370rpx;
}
.product-img {
  height: 370rpx;
}
.product-name {
  width: 100%;
  text-align: left;
  color: #000;
}
.product-desc {
  line-height: 1.2;
  padding: 0 20rpx;
  height: 75rpx;
}

.marker-price {
  text-decoration:line-through;
}