/* pages/category/category.wxss */
.categoryWrapper {
  display: flex;
}

.categoryLeft {
  width: 150rpx;
  flex: 1;
  box-sizing: border-box;
  border-right: 4rpx solid #ebebeb;
  background: #fff;
  height: 1110rpx;
}
.itemNav {
  display: block; 
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 26rpx;
}
.on {
  font-size: 30rpx;
  color: #ff6700;
}


.categoryRight {
  width: 600rpx;
  height: 1110rpx;
  flex: 0 0 600rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background: #fff;
}
.categoryItem,.listItem {
  width: 100%;
}

.categoryName {
  position: relative;
  height: 30rpx;
  padding:30rpx 0 30rpx;
  color: rgb(20, 19, 17);
}

